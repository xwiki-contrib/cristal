{
	"extends": "../../tsconfig.json",

	"compilerOptions": {
		"module": "NodeNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],

		/* Bundler mode */
		"moduleResolution": "nodenext",
		"jsx": "react-jsx",
		"isolatedDeclarations": false,

		/* Building */
		"sourceMap": true,
		"declarationMap": true,
		"outDir": "dist/"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
