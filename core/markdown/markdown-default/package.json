{
  "name": "@xwiki/cristal-markdown-default",
  "version": "0.22.0",
  "license": "LGPL 2.1",
  "author": "XWiki Org Community <contact@xwiki.org>",
  "homepage": "https://cristal.xwiki.org/",
  "repository": {
    "type": "git",
    "directory": "core/markdown/markdown-default",
    "url": "git+https://github.com/xwiki-contrib/cristal.git"
  },
  "bugs": {
    "url": "https://jira.xwiki.org/projects/CRISTAL/"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "scripts": {
    "api-extractor:local": "api-extractor run --local",
    "build": "vite build",
    "clean": "rimraf dist",
    "lint": "eslint \"./src/**/*.{ts,tsx,vue}\" --max-warnings=0",
    "test": "vitest --run",
    "typecheck": "tsc"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@xwiki/cristal-markdown-api": "workspace:*",
    "@xwiki/cristal-model-api": "workspace:*",
    "@xwiki/cristal-model-reference-api": "workspace:*",
    "@xwiki/cristal-model-remote-url-api": "workspace:*",
    "markdown-it": "catalog:"
  },
  "peerDependencies": {
    "inversify": "7.x",
    "reflect-metadata": "0.x"
  },
  "devDependencies": {
    "@types/markdown-it": "catalog:",
    "@xwiki/cristal-dev-config": "workspace:*",
    "inversify": "catalog:",
    "reflect-metadata": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest-mock-extended": "catalog:"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.es.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.umd.js"
        }
      }
    },
    "main": "./dist/index.es.js",
    "types": "./dist/index.d.ts"
  }
}
