{
  "name": "@xwiki/cristal-rendering",
  "version": "0.20.0",
  "license": "LGPL 2.1",
  "author": "XWiki Org Community <contact@xwiki.org>",
  "homepage": "https://cristal.xwiki.org/",
  "repository": {
    "type": "git",
    "directory": "rendering/rendering",
    "url": "git+https://github.com/xwiki-contrib/cristal.git"
  },
  "bugs": {
    "url": "https://jira.xwiki.org/projects/CRISTAL/"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "main": "./src/index.ts",
  "scripts": {
    "build": "pnpm compile",
    "clean": "rimraf dist",
    "compile": "vue-tsc --project tsconfig.json && vite build",
    "lint": "eslint \"./src/**/*.{ts,tsx,vue}\" --max-warnings=0",
    "prepack": "pnpm build",
    "test": "vitest --run"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@xwiki/cristal-api": "workspace:*",
    "@xwiki/cristal-rendering-wikimodel": "workspace:*",
    "dompurify": "3.2.6",
    "inversify": "7.5.4",
    "marked": "16.1.1",
    "marked-base-url": "1.1.7"
  },
  "peerDependencies": {
    "reflect-metadata": "0.x"
  },
  "devDependencies": {
    "@types/dompurify": "3.2.0",
    "@xwiki/cristal-dev-config": "workspace:*",
    "reflect-metadata": "0.2.2",
    "typescript": "5.8.3",
    "vite": "7.0.6",
    "vue-tsc": "2.2.12"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.es.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.umd.js"
        }
      }
    },
    "main": "./dist/index.es.js",
    "types": "./dist/index.d.ts"
  }
}
