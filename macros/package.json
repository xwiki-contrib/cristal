{
  "name": "@xwiki/cristal-macros",
  "version": "0.20.0",
  "license": "LGPL 2.1",
  "author": "XWiki Org Community <contact@xwiki.org>",
  "homepage": "https://cristal.xwiki.org/",
  "repository": {
    "type": "git",
    "directory": "macros",
    "url": "git+https://github.com/xwiki-contrib/cristal.git"
  },
  "bugs": {
    "url": "https://jira.xwiki.org/projects/CRISTAL/"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "main": "./src/index.ts",
  "scripts": {
    "build": "pnpm compile",
    "clean": "rimraf dist",
    "compile": "vue-tsc --project tsconfig.json && vite build",
    "lint": "eslint \"./src/**/*.{ts,tsx,vue}\" --max-warnings=0",
    "prepack": "pnpm build",
    "test": "vitest --run"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@xwiki/cristal-api": "workspace:*",
    "@xwiki/cristal-skin": "workspace:*",
    "inversify": "7.6.1"
  },
  "peerDependencies": {
    "reflect-metadata": "0.x",
    "vue": "3.x"
  },
  "devDependencies": {
    "@xwiki/cristal-dev-config": "workspace:*",
    "@xwiki/cristal-dsapi": "workspace:*",
    "reflect-metadata": "0.2.2",
    "typescript": "5.9.2",
    "vite": "7.0.6",
    "vue": "3.5.18",
    "vue-tsc": "2.2.12"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.es.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.umd.js"
        }
      }
    },
    "main": "./dist/index.es.js",
    "types": "./dist/index.d.ts"
  }
}
