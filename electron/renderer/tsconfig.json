{
  "compilerOptions": {
    "rootDir": "src",
    "module": "esnext",
    "target": "es2022",
    "sourceMap": false,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "#preload": [
        "../preload/src/index"
      ]
    },
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
